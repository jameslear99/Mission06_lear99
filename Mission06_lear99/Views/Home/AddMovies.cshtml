
@{
    ViewData["Title"] = "Add Movies";
}

@model Mission06_lear99.Models.ApplicationResponse
<h1>Add Movies</h1>

<!--This is the form for inputting new movie information-->
<form method="post">
    <label for="Category" asp-for="Category">Category</label>
    <input type="text" id="Category" asp-for="Category" required />
    <br />

    <label for="Title" asp-for="Title">Title</label>
    <input type="text" id="Title" asp-for="Title" required />
    <br />

    <label for="Year" asp-for="Year">Year</label>
    <input type="number" id="Year" asp-for="Year" maxlength="4" required />
    <br />

    <label for="Director" asp-for="Director">Director</label>
    <input type="text" id="Director" asp-for="Director" required />
    <br />

    <label for="Rating" asp-for="Rating">Rating</label>
    <select id="Rating" asp-for="Rating" required>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />

    <label for="Edited" asp-for="Edited">Edited</label>
    <input type="checkbox" id="Edited" asp-for="Edited" />
    <br />

    <label for="LentTo" asp-for="LentTo">Lent To</label>
    <input type="text" id="LentTo" asp-for="LentTo" required />
    <br />

    <label for="Notes" asp-for="Notes">Notes</label>
    <input type="text" id="Notes" asp-for="Notes" maxlength="25" required />
    <br />

    <button type="submit">Add Movie</button>

</form>
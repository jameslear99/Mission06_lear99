
@{
    ViewData["Title"] = "Delete Application";
}
@model Movie
    <!--This is the delete page-->

    <h2>Confirm Deletion!</h2>
    <h3> Are you sure you want to delete the record for the movie @Model.Title ?</h3>

    <form method="post" asp-action="Delete">
        <input type="hidden" asp-for="MovieID" />

        <button type="submit">Delete</button>
        <a asp-controller="Home" asp-action="ListMovies" class="btn btn-primary">Cancel</a>
    </form>
